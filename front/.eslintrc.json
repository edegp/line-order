{
  "extends": [
    "next",
    "plugin:tailwindcss/recommended",
    "next/core-web-vitals",
    "plugin:import/warnings",
    "prettier"
  ],
  "plugins": ["tailwindcss"],
  "rules": { "@next/next/no-document-import-in-page": "off" },
  "ignorePatterns": [
    "/.next/**/*",
    "/node_modules/*",
    ".gitignore",
    "/cert/*",
    "/**/*.json",
    "*.css",
    "*.css.map"
  ]
}
